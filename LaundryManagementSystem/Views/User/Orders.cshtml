@model List<LaundryManagementSystem.Models.OrderModel>
    @{
        ViewBag.Title = "Orders";
        Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
    }
    <div class="span9">
        <div class="content">

            <div class="module"  style="
    width: 1000px;
">
                <div class="module-head">
                    <h3>Order Details</h3>
                </div>
                <div class="module-body">
                    <p>



                    </p>
                    <table class="table table-striped table-bordered table-condensed">
                        <thead>
                            <tr>
                                <th>Order No</th>
                                <th>Order Date</th>
                                <th>Price</th>
                                <th>Payment Date</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Option</th>

                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>@item.OrderId</td>
                                    <td>@item.OrderDate</td>
                                    <td>@item.Price</td>
                                    <td>@item.OrderDate.ToShortDateString()</td>
                                    <td>@item.Type</td>
                                    <td>@item.Status</td>
                                    <td>
                                        @if (item.Status == "NewOrder")
                                        {
                                            <button class="btn btn-primary" onclick="window.location.href='/User/Cancel?id=@item.OrderId'">Cancel</button>
                                        }
                                    </td>
                                </tr>


                            </tbody>
                        }
                    </table>

                    <br />

                </div>
            </div>
        </div>
    </div>


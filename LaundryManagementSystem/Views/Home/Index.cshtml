
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";

}



<!-- BANNER -->
<div class="section banner">
    <div class="container pos-relative">
        <div class="caption">
            <div class="title-box">
                <h1>We Have The Best Laundry Services</h1>
            </div>
        </div>
    </div>
    <div class="imgbg" style="background:url('/Content/images/home.jpg') no-repeat center center;   -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover">
        <img src="/Content/images/homeslide.jpg" alt="">
    </div>
</div>

@if (ViewBag.Offers != null)
{
    <div class="section services">
        <div class="container">
            <div class="row">
                <br />
                <br />
                
                <h3 class="lead" style="color:darkblue; font-weight:900"> OFFERS AND LATEST NEWS</h3><br />
                @{

                    foreach (var item in ((List<LaundryManagementSystem.Models.OffersModel>)ViewBag.Offers))
                    {
                        <div class="alert alert-danger col-sm-3" style="margin-right:15px;padding:5px">
                            @item.Heading<br />

                            @item.Description
                        </div>

                    }

                }


            </div>
        </div>
    </div>
}


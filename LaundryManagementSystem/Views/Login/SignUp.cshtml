
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignUp</title>
    <link href="~/Content/SignUpStyle.css" rel="stylesheet" />

</head>

<body>

    <div id="id01">
        <form class="modal-content"  action="/Login/SignUp">
            <div class="container">
                <h1>Sign Up</h1>
                <p>Please fill in this form to create an account.</p>
                <hr>

                <label for="Fname"><b>First Name</b></label>
                <input type="text" placeholder="Enter First Name" name="FirstName" required>


                <label for="Lname"><b>Last Name</b></label>
                <input type="text" placeholder="Enter Last Name" name="LastName" required>

                <label for="email"><b>Email</b></label>
                <input type="text" placeholder="Enter Email" name="EmailId" required>

                <label for="phoneno"><b>Phone No</b></label>
                <input type="text" placeholder="Enter PhoneNo" name="PhoneNo" required>


                <label for="username"><b>User Name</b></label>
                <input type="text" placeholder="Enter User Name" name="UserName" required>

                <label for="psw"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="Password" required>

                <div class="clearfix">
                    <button type="button" onclick="location.href='/Login/Index'" class="cancelbtn">Cancel</button>
                    <button type="submit" class="signupbtn">Sign Up</button>
                </div>
            </div>
        </form>
    </div>

 
</body>
</html>
